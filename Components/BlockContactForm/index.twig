<flynt-component 
  load:on="visible" 
  name="BlockContactForm"
  style="background-color: {% if options.colorBackground %}{{ options.colorBackground }}{% else %}transparent{% endif %};">
  <div 
    class="boxed w-full
      {# {% if options.colorBackground %} bg-{{ options.colorBackground }}{% endif %}
      {% if options.colorText %} text-{{ options.colorText }}{% endif %} #}
      ">
    <div 
      class="
        wysiwyg flex flex-col
        {% if textPosition == 'right' %} justify-end w-full lg:w-[calc(50%_-_12.5px)] ml-auto{% endif %}
        {% if textPosition == 'left' %} justify-start w-full lg:w-[calc(50%_-_12.5px)] mr-auto{% endif %}
        {% if textPosition == 'center_narrow' %} justify-center w-full md:w-2/3 mx-auto{% endif %}
        {% if textPosition == 'center_full' %} justify-center w-full mx-auto{% endif %}
      ">
       {{ contentHtml }}
    </div>
  </div>
</flynt-component>
